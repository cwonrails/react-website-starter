{
  "name": "react-website-starter",
  "private": true,
  "version": "0.0.1",
  "description": "React website starter",
  "main": "Index.js",
  "scripts": {
    "start": "x0 dev src/Index.js -op 8888",
    "build:bundle": "yarn run clean && x0 build src/Index.js -d dist --cssLibrary='styled-components'",
    "build:static": "yarn run clean && x0 build src/Index.js -d dist --static",
    "clean": "rm -rf dist",
    "lint": "standard src/*.js* --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/broccolini/react-website-starter.git"
  },
  "author": "Diana Mounter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/broccolini/react-website-starter/issues"
  },
  "homepage": "https://github.com/broccolini/react-website-starter#readme",
  "dependencies": {
    "@compositor/x0": "^4.0.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "react": "^16.2.0",
    "styled-components": "^3.2.0",
    "styled-system": "^2.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "standard": "^11.0.0"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
